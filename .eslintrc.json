{
	"root": true,
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"standard-with-typescript",
		"plugin:@typescript-eslint/recommended",
		"plugin:import/recommended",
		"plugin:import/typescript",
		"prettier"
	],
	"plugins": [
		"@typescript-eslint",
		"import",
		"prettier"
	],
	"rules": {
		"prettier/prettier": "error",
		"import/namespace": "off",
		"import/order": [
			"error",
			{
				"newlines-between": "always",
				"groups": [
					"builtin",
					"external",
					"internal",
					"parent",
					"sibling",
					"index",
					"object",
					"type"
				]
			}
		]
	}
}